<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txtHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/btnStartTrnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnEditDict"
        android:layout_alignRight="@+id/btnEditDict"
        android:layout_below="@+id/btnEditDict"
        android:onClick="onClickStartTrnr"
        android:text="@string/start" />

    <Button
        android:id="@+id/btnChangeOpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnStartTrnr"
        android:layout_alignRight="@+id/btnStartTrnr"
        android:layout_below="@+id/btnStartTrnr"
        android:onClick="onClickChangeOpt"
        android:text="@string/t_opt" />

    <Button
        android:id="@+id/btnEditDict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtHello"
        android:layout_marginRight="42dp"
        android:layout_marginTop="42dp"
        android:onClick="onClickEditDict"
        android:text="@string/edit_dict" />

</RelativeLayout>
